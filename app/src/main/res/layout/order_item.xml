<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    tools:context=".ui.slideshow.SlideshowFragment">

    <!-- CardView for Order Details -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_order_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="12dp"
        android:radius="16dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@drawable/gradient_background_one">

            <!-- Profile Image Placeholder -->
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="12dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/box"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Position Name -->
            <TextView
                android:id="@+id/order_package_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Package Name"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/profile_image"
                app:layout_constraintTop_toTopOf="@id/profile_image" />

            <!-- Position ID -->
            <TextView
                android:id="@+id/package_id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/otTxt03"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/order_package_name"
                app:layout_constraintTop_toBottomOf="@id/order_package_name" />

            <!-- Position Price -->

            <TextView
                android:id="@+id/package_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:text="5555"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/package_id_txt"
                app:layout_constraintTop_toBottomOf="@id/order_package_name" />

            <TextView
                android:id="@+id/order_id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/otTxt09"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/order_package_name"
                app:layout_constraintTop_toBottomOf="@+id/package_id_txt" />

            <!-- Customer Name -->

            <TextView
                android:id="@+id/order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:text="5555"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/order_id_txt"
                app:layout_constraintTop_toBottomOf="@+id/package_id_txt" />

            <TextView
                android:id="@+id/order_package_price_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/otTxt01"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/order_package_name"
                app:layout_constraintTop_toBottomOf="@+id/order_id_txt" />

            <TextView
                android:id="@+id/order_package_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:text="20"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/order_package_price_mark"
                app:layout_constraintTop_toBottomOf="@+id/order_id_txt" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#000000"
                app:layout_constraintTop_toBottomOf="@+id/order_package_price_mark"
                tools:layout_editor_absoluteX="16dp" />

            <TextView
                android:id="@+id/order_package_price3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:text="@string/otTxt02"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/order_package_price"
                app:layout_constraintTop_toBottomOf="@+id/order_id_txt" />

            <TextView
                android:id="@+id/customer_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:text="Chirath Rothila"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/order_package_price_mark" />

            <!-- Customer Mobile -->
            <TextView
                android:id="@+id/customer_mobile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="0713828744"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/customer_name"
                app:layout_constraintStart_toStartOf="@id/customer_name"
                app:layout_constraintTop_toBottomOf="@id/customer_name" />

            <!-- Customer Email -->
            <TextView
                android:id="@+id/customer_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="chirath@gmail.com"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/customer_name"
                app:layout_constraintStart_toStartOf="@id/customer_mobile"
                app:layout_constraintTop_toBottomOf="@id/customer_mobile" />

            <!-- People Details -->
            <TextView
                android:id="@+id/people_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/customer_email"
                app:layout_constraintTop_toBottomOf="@id/customer_email" />

            <!-- Total Price -->

            <TextView
                android:id="@+id/people_details2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="18dp"
                android:text="@string/otTxt06"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/customer_email"
                app:layout_constraintStart_toEndOf="@+id/people_details"
                app:layout_constraintTop_toBottomOf="@id/customer_email" />

            <TextView
                android:id="@+id/total_price_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/otTxt01"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/people_details"
                app:layout_constraintTop_toBottomOf="@id/people_details" />

            <!-- Check-in Date -->

            <TextView
                android:id="@+id/total_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="80"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/people_details2"
                app:layout_constraintStart_toEndOf="@+id/total_price_txt"
                app:layout_constraintTop_toBottomOf="@id/people_details" />

            <TextView
                android:id="@+id/checkin_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/otTxt04"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/total_price_txt"
                app:layout_constraintTop_toBottomOf="@id/total_price_txt" />

            <!-- Check-out Date -->

            <TextView
                android:id="@+id/checkin_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:text="2022/12/10"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/customer_name"
                app:layout_constraintStart_toEndOf="@+id/checkin_date_text"
                app:layout_constraintTop_toBottomOf="@id/total_price_txt" />

            <TextView
                android:id="@+id/checkout_date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/otTxt05"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/checkin_date_text"
                app:layout_constraintTop_toBottomOf="@id/checkin_date_text" />

            <!-- Days and Nights -->

            <TextView
                android:id="@+id/checkout_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="2022/12/14"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/customer_name"
                app:layout_constraintStart_toEndOf="@+id/checkout_date_txt"
                app:layout_constraintTop_toBottomOf="@id/checkin_date_text" />

            <LinearLayout
                android:id="@+id/days_nights"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@id/checkout_date_txt"
                app:layout_constraintTop_toBottomOf="@id/checkout_date_txt">

                <ImageView
                    android:id="@+id/icon_days"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Days Icon"
                    android:src="@drawable/day"
                    android:tint="@color/black" />

                <TextView
                    android:id="@+id/text_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 "
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_days3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_weight="1"
                    android:text="Days"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/icon_nights"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Nights Icon"
                    android:src="@drawable/moon"
                    android:tint="@color/black" />

                <TextView
                    android:id="@+id/text_nights"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 "
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_nights2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_weight="1"
                    android:text="Days"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Status -->
            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Status: Completed"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/days_nights"
                app:layout_constraintTop_toBottomOf="@id/days_nights" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
